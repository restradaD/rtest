{% trans_default_domain 'AppBundle' %}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h5>{{ 'app.profile.edit' | trans }}</h5>
        <div class="ibox-tools">
        </div>
    </div>
    <div class="ibox-content">
        {{ form_start(form) }}
            {{ form_row(form.current_password) }}
            {{ form_row(form.username) }}

            <div class="form-group ">
                {{ form_label(form.apikey, null, { 'label_attr': { 'class': 'col-sm-2 control-label' } }) }}
                <div class="col-sm-10">
                    {{ form_errors(form.apikey) }}
                    <div class="input-group">
                        {{ form_widget(form.apikey, { 'attr': { 'class' : 'form-control' } }) }}
                        <span class="input-group-btn">
                            <a class="btn btn-white btn-copy" data-clipboard-target="#fos_user_profile_form_apikey">
                                <i class="fa fa-copy"></i>
                            </a>
                            <a href="#" class="btn btn-primary btn-renovate ladda-button" data-style="zoom-in">
                                <i class="fa fa-refresh"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>

            {{ form_row(form.first_name) }}
            {{ form_row(form.last_name) }}
            {{ form_row(form.photo) }}
            {{ form_row(form.email) }}

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <a class="btn btn-white" href="{{ path('grand_central') }}">{{ 'app.cancel' | trans }}</a>
                    <button class="ladda-button btn btn-primary" type="submit" data-style="zoom-in">{{ 'app.save'|trans }}</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
