{% trans_default_domain 'AppBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="m-t" role="form" method="post" action="{{ path("fos_user_security_check") }}">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <input name="_username" type="text" class="form-control" placeholder="{{ 'security.login.username'|trans }}" required="" value="{{ last_username }}">
    </div>
    <div class="form-group">
        <input name="_password" type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required="">
    </div>

    <div class="checkbox m-r-xs">
        <input class="i-checks" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="hidden" name="_target_path" value="grand_central" />
    <button type="submit" class="btn btn-primary block full-width m-b">{{ 'security.login.submit'|trans }}</button>

    <a href="{{ path('fos_user_resetting_request') }}"><small>{{ 'security.request.password'|trans }}</small></a>
</form>